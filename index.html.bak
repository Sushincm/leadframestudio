<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Leadframe Studio - A conversion-focused web design agency specializing in high-performance websites that turn visitors into leads."
    />
    <meta
      name="keywords"
      content="web design agency, conversion optimization, landing pages, website development, lead generation"
    />
    <meta name="author" content="Leadframe Studio" />
    <meta
      property="og:title"
      content="Leadframe Studio | High-Converting Website Design"
    />
    <meta
      property="og:description"
      content="We build high-converting websites that turn visitors into leads. Strategy, design, and performance â€” engineered for growth."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://leadframestudio.com" />
    <meta property="og:image" content="assets/images/og-image.jpg" />
    <!-- TODO: Add OG Image -->

    <title>Leadframe Studio | High-Converting Website Design</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="assets/favicon.png" />
    <!-- TODO: Add Favicon -->

    <!-- Fonts: DM Sans (Premium Sans) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap"
      rel="stylesheet"
    />

    <!-- Icons: Lucide (via CDN for vanilla JS) -->
    <script src="https://unpkg.com/lucide@latest"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <!-- Navigation -->
    <header class="header" id="header">
      <div class="container">
        <a href="index.html" class="logo">Leadframe Studio</a>
        <nav class="nav" id="nav-menu">
          <ul class="nav__list">
            <li class="nav__item">
              <a href="#services" class="nav__link">Services</a>
            </li>
            <li class="nav__item">
              <a href="#process" class="nav__link">Process</a>
            </li>
            <li class="nav__item">
              <a href="#work" class="nav__link">Work</a>
            </li>
            <li class="nav__item">
              <a href="#testimonials" class="nav__link">Testimonials</a>
            </li>
            <li class="nav__item">
              <a href="#contact" class="nav__link">Contact</a>
            </li>
          </ul>
          <div class="nav__close" id="nav-close">
            <i data-lucide="x"></i>
          </div>
        </nav>
        <div class="nav__btns">
          <a href="#contact" class="btn btn--small">Schedule Your Time</a>
          <div class="nav__toggle" id="nav-toggle">
            <i data-lucide="menu"></i>
          </div>
        </div>
      </div>
    </header>

    <div class="global-shapes">
      <div class="shape shape--1"></div>
      <div class="shape shape--2"></div>
      <div class="shape shape--3"></div>
    </div>

    <main class="main">
      <!-- Hero Section (Centered SaaS) -->
      <section class="hero section" id="home">
        <div class="container hero__container">
          <div class="hero__content-wrapper">
            <div class="hero__badge"> Conversion Focused Design</div>
            <h1 class="hero__title">
              Turn Traffic Into <br />
              <span class="text-gradient">Revenue</span>.
            </h1>
            <p class="hero__description">
              We build premium, high-converting websites for ambition-led
              brands. Modern aesthetics meet serious performance.
            </p>
            <div class="hero__btns">
              <a href="#contact" class="btn btn--primary">
                get a high-converting website
                <i data-lucide="arrow-right" class="btn__icon"></i>
              </a>
              <a href="#work" class="btn btn--secondary">View Selected Work</a>
            </div>

            <!-- Floating Elements (Orbiting) -->
            <div class="hero__orbit-elements">
              <div class="float-card float-card--orbit-1">
                <div class="float-icon"><i data-lucide="trending-up"></i></div>
                <div class="float-content">
                  <span class="float-label">Growth</span>
                  <span class="float-value">+240%</span>
                </div>
              </div>
              <div class="float-card float-card--orbit-2">
                <div class="float-icon"><i data-lucide="users"></i></div>
                <div class="float-content">
                  <span class="float-label">Leads</span>
                  <span class="float-value">850+</span>
                </div>
              </div>
              <div class="float-card float-card--orbit-3">
                <div class="float-icon"><i data-lucide="zap"></i></div>
                <div class="float-content">
                  <span class="float-label">Speed</span>
                  <span class="float-value">0.2s</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Social Proof -->
      <section class="social-proof">
        <div class="container">
          <p class="social-proof__label">Trusted by high-growth companies</p>
          <div class="logos__track">
            <div class="logo-item">VERTEX</div>
            <div class="logo-item">LAYER</div>
            <div class="logo-item">QUOTIENT</div>
            <div class="logo-item">SISYPHUS</div>
            <div class="logo-item">HOURGLASS</div>
            <div class="logo-item">CIRCOOL</div>
          </div>
        </div>
      </section>

      <!-- Value/Stats Section -->
      <section class="value section">
        <div class="container">
          <div class="section__header text-center">
            <h2 class="section__title">
              Designed for <span class="text-gradient">Impact</span>
            </h2>
            <p class="section__subtitle">
              We don't just design pages. We engineer digital ecosystems that
              build trust and drive revenue.
            </p>
          </div>

          <div class="problem__container">
            <!-- Reusing grid layout -->
            <div class="problem__text">
              <h3 class="section__title section__title--medium">
                Strategic Precision.
              </h3>
              <p class="section__subtitle section__subtitle--zero-margin">
                Every pixel serves a purpose. We combine aesthetic excellence
                with data-driven user experience strategies.
              </p>
              <ul class="value__list">
                <li>
                  <i
                    data-lucide="check-circle"
                    style="
                      display: inline;
                      width: 1.2em;
                      color: var(--accent-color);
                      margin-right: 0.5rem;
                      vertical-align: middle;
                    "
                  ></i>
                  Scalable design systems
                </li>
                <li>
                  <i
                    data-lucide="check-circle"
                    style="
                      display: inline;
                      width: 1.2em;
                      color: var(--accent-color);
                      margin-right: 0.5rem;
                      vertical-align: middle;
                    "
                  ></i>
                  Conversion-rate optimization
                </li>
              </ul>
            </div>

            <div class="solution__text">
              <div class="solution__grid">
                <div>
                  <div class="solution__stat-value">3x</div>
                  <p class="solution__stat-label">Average conversion lift</p>
                </div>
                <div>
                  <div class="solution__stat-value">0.2s</div>
                  <p class="solution__stat-label">Page load speeds</p>
                </div>
                <div>
                  <div class="solution__stat-value">10+</div>
                  <p class="solution__stat-label">Website launches</p>
                </div>
                <div>
                  <div class="solution__stat-value">24/7</div>
                  <p class="solution__stat-label">Support & Monitoring</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Services Section -->
      <section class="services section" id="services">
        <div class="container">
          <h2 class="section__title text-center">Our Expertise</h2>
          <div class="services__grid">
            <div class="service__card">
              <div class="service__icon"><i data-lucide="layout"></i></div>
              <h3 class="service__title">Website Design & Development</h3>
              <p class="service__description">
                Custom, responsive websites built from scratch to reflect your
                brand's unique identity.
              </p>
            </div>
            <div class="service__card">
              <div class="service__icon"><i data-lucide="target"></i></div>
              <h3 class="service__title">Landing Pages & Funnels</h3>
              <p class="service__description">
                High-impact pages designed specifically to convert traffic into
                qualified leads.
              </p>
            </div>
            <div class="service__card">
              <div class="service__icon"><i data-lucide="zap"></i></div>
              <h3 class="service__title">Performance Optimization</h3>
              <p class="service__description">
                Speed optimization and technical SEO to ensure your site ranks
                high and loads instantly.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Process Section -->
      <section class="process section" id="process">
        <div class="container">
          <h2 class="section__title text-center">How We Work</h2>
          <div class="process__steps">
            <div class="process__step">
              <div class="process__number">01</div>
              <h3 class="process__title">Discovery & Strategy</h3>
              <p class="process__description">
                We dive deep into your business goals and target audience.
              </p>
            </div>
            <div class="process__step">
              <div class="process__number">02</div>
              <h3 class="process__title">Design & Wireframes</h3>
              <p class="process__description">
                We create a conversion-focused layout and visual style.
              </p>
            </div>
            <div class="process__step">
              <div class="process__number">03</div>
              <h3 class="process__title">Development</h3>
              <p class="process__description">
                We build your site using clean, semantic code.
              </p>
            </div>
            <div class="process__step">
              <div class="process__number">04</div>
              <h3 class="process__title">Launch & Growth</h3>
              <p class="process__description">
                We test, launch, and help you scale.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Work Section -->
      <section class="work section" id="work">
        <div class="container">
          <div class="section__header text-center">
            <h2 class="section__title">Selected Work</h2>
            <p class="section__subtitle">
              High-performance digital products we've engineered.
            </p>
          </div>

          <div class="work__grid">
            <!-- Project 1 -->
            <article class="work__card">
              <div class="work__img-wrapper">
                <!-- Placeholder gradient will be handled by CSS -->
                <div class="work__overlay">
                  <a href="#" class="btn btn--small btn--white"
                    >View Case Study</a
                  >
                </div>
              </div>
              <div class="work__content">
                <span class="work__category">Fintech</span>
                <h3 class="work__title">Nova Finance App</h3>
                <p class="work__description">
                  Redesigned the onboarding flow, increasing user activation by
                  45%.
                </p>
              </div>
            </article>

            <!-- Project 2 -->
            <article class="work__card">
              <div class="work__img-wrapper">
                <div class="work__overlay">
                  <a href="#" class="btn btn--small btn--white"
                    >View Case Study</a
                  >
                </div>
              </div>
              <div class="work__content">
                <span class="work__category">E-Commerce</span>
                <h3 class="work__title">Luxe Apparel</h3>
                <p class="work__description">
                  Headless Shopify storefront with sub-second page loads and 3D
                  product previews.
                </p>
              </div>
            </article>

            <!-- Project 3 -->
            <article class="work__card">
              <div class="work__img-wrapper">
                <div class="work__overlay">
                  <a href="#" class="btn btn--small btn--white"
                    >View Case Study</a
                  >
                </div>
              </div>
              <div class="work__content">
                <span class="work__category">SaaS</span>
                <h3 class="work__title">TaskFlow Pro</h3>
                <p class="work__description">
                  Marketing site for a project management tool. 2x increase in
                  trial signups.
                </p>
              </div>
            </article>
          </div>
        </div>
      </section>

      <!-- Testimonials (Keep as is, just ensuring flow) -->
      <section class="testimonials section" id="testimonials">
        <div class="container">
          <h2 class="section__title text-center">Results that Speak</h2>
          <div class="testimonials__grid">
            <div class="testimonial__card">
              <p class="testimonial__text">
                "Leadframe Studio completely transformed our online presence.
                Our leads doubled in the first month."
              </p>
              <div class="testimonial__author">
                <span class="testimonial__name">Sarah J.</span>
                <span class="testimonial__role">Founder, TechStart</span>
              </div>
            </div>
            <div class="testimonial__card">
              <p class="testimonial__text">
                "Finally an agency that cares about performance. The site is
                blazing fast."
              </p>
              <div class="testimonial__author">
                <span class="testimonial__name">Mike T.</span>
                <span class="testimonial__role">CEO, GrowthCo</span>
              </div>
            </div>
            <div class="testimonial__card">
              <p class="testimonial__text">
                "The design is stunning, but the conversion strategy is what
                really paid off. Highly recommended."
              </p>
              <div class="testimonial__author">
                <span class="testimonial__name">Alex R.</span>
                <span class="testimonial__role">Director, Studio X</span>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA / Contact Section (Redesigned) -->
      <section class="contact section" id="contact">
        <div class="container">
          <div class="contact__wrapper">
            <div class="contact__content">
              <h2 class="contact__title">
                Let's build something
                <span class="text-gradient">extraordinary</span>.
              </h2>
              <p class="contact__desc">
                Ready to scale? We're taking on new projects for Q1. Schedule a
                free strategy session to discuss your goals.
              </p>

              <div class="contact__info">
                <div class="contact__item">
                  <div class="contact__icon"><i data-lucide="mail"></i></div>
                  <div>
                    <span class="contact__label">Email Us</span>
                    <a
                      href="mailto:hello@leadframestudio.com"
                      class="contact__link"
                      >hello@leadframestudio.com</a
                    >
                  </div>
                </div>
              </div>
            </div>

            <div class="contact__form-wrapper">
              <form class="contact__form" id="contact-form">
                <h3 class="form__title">Send an Enquiry</h3>
                <div class="form__group">
                  <label for="name" class="form__label">Name</label>
                  <input
                    type="text"
                    id="name"
                    class="form__input"
                    placeholder="John Doe"
                    required
                  />
                </div>
                <div class="form__group">
                  <label for="email" class="form__label">Email</label>
                  <input
                    type="email"
                    id="email"
                    class="form__input"
                    placeholder="john@company.com"
                    required
                  />
                </div>
                <div class="form__group">
                  <label for="message" class="form__label"
                    >Project Details</label
                  >
                  <textarea
                    id="message"
                    class="form__input"
                    rows="4"
                    placeholder="Tell us about your goals..."
                  ></textarea>
                </div>
                <button type="submit" class="btn btn--primary btn--full">
                  <span class="btn__text">Send Message</span>
                  <i data-lucide="arrow-right" class="btn__icon"></i>
                </button>
              </form>
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="footer section">
      <div class="container footer__container">
        <div class="footer__brand">
          <a href="#" class="footer__logo">Leadframe Studio</a>
          <p class="footer__description">
            High-performance web design for growth-focused businesses.
          </p>
        </div>
        <div class="footer__links">
          <h3 class="footer__title">Quick Links</h3>
          <ul class="footer__list">
            <li><a href="#services" class="footer__link">Services</a></li>
            <li><a href="#process" class="footer__link">Process</a></li>
            <li><a href="#contact" class="footer__link">Contact</a></li>
          </ul>
        </div>
        <div class="footer__contact">
          <h3 class="footer__title">Contact</h3>
          <ul class="footer__list">
            <li>
              <a href="mailto:hello@leadframestudio.com" class="footer__link"
                >hello@leadframestudio.com</a
              >
            </li>
          </ul>
        </div>
      </div>
      <div class="footer__bottom container">
        <p class="footer__copy">
          &copy; 2024 Leadframe Studio. All rights reserved.
        </p>
      </div>
    </footer>

    <!-- JS -->
    <script src="js/script.js"></script>
    <script>
      lucide.createIcons();
    </script>
  </body>
</html>
